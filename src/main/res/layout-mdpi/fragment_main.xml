<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:context="com.seetatech.silentliving.AntiSpoofingComponent">



    <com.seetatech.silentliving.camera.CameraPreview2
        android:rotation="-90"
        android:id="@+id/camera_preview"
        android:layout_width="480px"
        android:layout_height="640px"
        android:layout_gravity="center_horizontal"/>
    <SurfaceView
        android:id="@+id/surfaceViewOverlap"
        android:layout_width="480px"
        android:layout_height="640px"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/testMat"
        android:layout_width="480px"
        android:layout_height="640px"
        android:layout_gravity="center_horizontal"></ImageView>
    <TextView
        android:id="@+id/txt_status"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="965px"
        android:background="@color/info_text_content"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:visibility="visible" />
</FrameLayout>
